{
    "name": "lassy-xpath",
    "description": "XPath format and editor for searching LASSY XML files",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "prepublishOnly": "npm run build && npm run test",
        "build": "npm run build:ngc && npm run build:copyfiles",
        "build:ngc": "ng build",
        "build:copyfiles": "copyfiles LICENSE README.md dist/lassy-xpath/",
        "clean": "git clean -xdf -e node_modules",
        "test": "ng test",
        "test:once": "ng test --watch=false",
        "publish": "npm run test:once && npm run build && cd dist/lassy-xpath && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/UUDigitalHumanitieslab/lassy-xpath.git"
    },
    "author": "Sheean Spoel, Digital Humanities Lab <s.j.j.spoel@uu.nl>",
    "license": "CC-BY-NC-SA-4.0",
    "browser": {
        "fs": false
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^12.1.0",
        "@angular/cli": "^12.1.0",
        "@angular/common": "^12.1.0",
        "@angular/compiler": "^12.1.0",
        "@angular/compiler-cli": "^12.1.0",
        "@angular/core": "^12.1.0",
        "@angular/platform-browser": "^12.1.0",
        "@angular/platform-browser-dynamic": "^12.1.0",
        "@types/jasmine": "^3.7.7",
        "@types/node": "^15.12.4",
        "ajv": "^6.5.3",
        "copyfiles": "^2.4.1",
        "core-js": "^2.5.7",
        "jasmine": "^3.7.0",
        "jasmine-core": "^3.1.0",
        "jasmine-ts": "^0.4.0",
        "karma": "^6.3.16",
        "karma-chrome-launcher": "^3.1.0",
        "karma-jasmine": "^4.0.1",
        "karma-jasmine-html-reporter": "^1.6.0",
        "ng-packagr": "^12.1.0",
        "rxjs": "^6.6.7",
        "ts-loader": "^4.1.0",
        "tslint": "^6.1.3",
        "typescript": "~4.2.4",
        "webpack": "^5.40.0",
        "zone.js": "^0.11.4"
    },
    "dependencies": {
        "brace": "^0.11.1",
        "karma-coverage": "^2.0.3",
        "ts-xpath": "^0.3.1",
        "tslib": "^2.3.0"
    }
}
